10-logging.conf
    log_path                = /var/log/dovecot/dovecot.log
    info_log_path           = /var/log/dovecot/dovecot-info.log
    auth_verbose            = yes
    auth_verbose_passwords  = yes    

10-main.conf
    mail_location = mdbox:~/mdbox

10-master.conf
    service imap-login {
        inet_listener imap {
            address = localhost
            #port = 143
        }
        inet_listener imaps {
            address = localhost
            #port = 993
            #ssl = yes
        }
    }
    service pop3-login {
        inet_listener pop3 {
            address = localhost
            #port = 110
        }
        inet_listener pop3s {
            address = localhost
            #port = 995
            #ssl = yes
        }
    }

auth-passwdfile.conf.ext
    passdb {
        driver = passwd-file
        args = scheme=CRYPT username_format=%u /opt/usuarios/passwords/%d
    }

    userdb {
        driver = passwd-file
        args = username_format=%u /opt/usuarios/passwords/%d

        # Default fields that can be overridden by passwd-file
        #default_fields = quota_rule=*:storage=1G

        # Override fields from passwd-file
        #override_fields = home=/home/virtual/%u
    }

