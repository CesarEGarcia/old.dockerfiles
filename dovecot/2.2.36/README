10-logging.conf
    log_path                = /var/log/dovecot/dovecot.log
    info_log_path           = /var/log/dovecot/dovecot-info.log
    auth_verbose            = yes
    auth_verbose_passwords  = yes


10-main.conf
    mail_location = mdbox:~/mdbox


10-master.conf
    service imap-login {
        inet_listener imap {
            address = localhost
            #port = 143
        }
        inet_listener imaps {
            address = localhost
            #port = 993
            #ssl = yes
        }
    }
    service pop3-login {
        inet_listener pop3 {
            address = localhost
            #port = 110
        }
        inet_listener pop3s {
            address = localhost
            #port = 995
            #ssl = yes
        }
    }


20-lmtp.conf
    protocol lmtp {
        mail_plugins = $mail_plugins sieve
    }

20-managesieve.conf
    service managesieve-login {
        inet_listener sieve {
            port = 4190
        }
    }

    service managesieve {
    }


90-sieve.conf
    protocols = $protocols sieve


    protocol sieve {
            managesieve_max_line_length = 65536
            managesieve_implementation_string = dovecot
            log_path = /var/log/dovecot/sieve-errors.log
            info_log_path = /var/log/dovecot/sieve.log

    #mail_debug = yes
    }

    plugin {
            sieve_plugins = sieve_imapsieve sieve_extprograms
            sieve = file:~/sieve;active=~/.dovecot.sieve
            sieve_global = /opt/dovecot/sieve/global.d

